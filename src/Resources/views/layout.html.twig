<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>{% block title %}!{% endblock %}</title>

    {% block stylesheets %}
        <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic,700italic|Noto+Sans:400,400italic,700italic,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('bundles/creonitadmin/css/vendor.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/creonitadmin/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/creonitadmin/css/admin.css') }}">
        {{ render(controller('Creonit\\AdminBundle\\Controller\\PluginController:stylesheetsAction')) }}
    {% endblock %}

    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('bundles/creonitadmin/css/font-awesome.min.css') }}">

    {{ render(controller('Creonit\\AdminBundle\\Controller\\PluginController:injectionAction', {block: 'head'})) }}

    <script>
	    var baseUrl = '{{ path('creonit_admin_index') }}';
        {{ render(controller('Creonit\\AdminBundle\\Controller\\PluginController:injectionAction', {block: 'head_script'})) }}
    </script>

</head>
<body>

    <div class="page-wrapper">
        <div class="page-sidebar">
            {{ render(controller('Creonit\\AdminBundle\\Controller\\LayoutController:sidebarAction')) }}
        </div>
        <div class="page-content">
            <div class="page-content-module">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>


{% block javascripts %}
    <script src="{{ asset('bundles/creonitadmin/js/vendor.js') }}"></script>
    <script src="{{ asset('bundles/creonitadmin/js/tinymce/tinymce.js') }}"></script>
    <script src="{{ asset('bundles/creonitadmin/js/tinymce/jquery.tinymce.js') }}"></script>
    <script src="{{ asset('bundles/creonitadmin/js/admin.js') }}"></script>
    <script src="{{ asset('bundles/creonitadmin/js/common.js') }}"></script>
    {{ render(controller('Creonit\\AdminBundle\\Controller\\PluginController:javascriptsAction')) }}
{% endblock %}

</body>
</html>

