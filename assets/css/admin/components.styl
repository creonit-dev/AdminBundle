.list-controls{
   display flex

   &-level{
      flex 0 0 auto
   }

   &-flex{
      flex 0 0 auto
      cursor default
      color #ddd
      margin-right 5px
      font-size .85em
      padding .15em 0


      &.has-children{
         cursor pointer
         color #999

         &:hover{
            color #666
         }
      }


   }

   &-value{
      flex 0 1 auto
   }

   &-sort{
      visibility hidden
      flex 0 0 auto
      margin 0 0 0 5px
      padding 0 5px
      cursor move
      color #ccc

      &:hover, .table tr.move & {
         color #666
      }

      /.table:not(.sorting) tr:hover &, /.table:not(.sorting-send) tr.sorting & {
         visibility visible
      }



   }

   &-options{
      flex 1 0 auto
      visibility hidden
      margin 0 0 0 5px

      /.table:not(.sorting) tr:hover & {
         visibility visible
      }
   }

   .media-heading > & {
      display inline-flex
   }
}



.table tbody tr.nodrop, .table tbody tr.deactive{
   opacity .3
}

.list-pagination{

   & > td{
      line-height 1 !important
      padding-top 7px !important
      padding-bottom 6px !important
   }

   .pagination{
      margin 0

      & > li > a, & > li > span {
         font-size 10px
         line-height 1
         padding 2px 5px
         cursor pointer
      }

      & > li.active > a, & > li.active > span {
         background #bbb
         border-color #aaa
      }
   }
}

.component-editor .panel-heading{
   padding 10px
}

.component-editor .component-table{
   .panel-body{
      padding 0

      .component-table-empty{
         padding 15px
      }

      .table{
         margin 0
      }
   }
}
.component-table .modal-body{
   .panel-body{

      .table{
         margin 0
      }
   }
}

.component-table{
   .table  {
      margin: 0;
   }

   .table{
      tbody tr:last-child td {
         border-bottom none
      }

      tbody tr:first-child td{
         border-top none
      }
   }

   .table-responsive {
      overflow inherit
   }
}

.loading{
   padding 15px
   font-size 2em

   i{
      transform-origin 50% 50%
   }

   &:after{
      content 'Загрузка'
      padding-left 10px
   }

   /.modal-dialog > .component > & {
      position absolute
      top 50%
      left 50%
      color rgba(white, .1)
      font-size 20em
      transform translate(-50%,0)

      i{
         transform-origin 50% 49%
      }

      &:after{
         content ''
         padding-left 0
      }
   }

   /.component-editor .component & {
      border 1px solid #ddd
      border-radius 3px
   }

   &.is-error{
      color #d9534f

      i{
         margin-right 10px
      }

      &:after{
         display none
      }
   }
}

.sortable-column {
   color inherit
   position relative

   &:before {
      content ''
      opacity .5
      position absolute
      top 100%
      left 0
      right 0
      border-bottom 1px dotted
   }

   &:after {
      content ''
      opacity 0
      transition opacity .3s ease
      position absolute
      padding-left .25ex
   }

   &.is-asc:after {
      content '▲'
   }

   &.is-desc:after {
      content '▼'
   }

   &.is-asc,
   &.is-desc {
      &:before {
         display none
      }

      &:after {
         opacity 1
      }
   }

   &:hover,
   &:active,
   &:focus {
      text-decoration none

      &:before {
         display none
      }
   }
}