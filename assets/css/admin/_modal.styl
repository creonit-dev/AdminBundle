.arcticmodal-overlay {
   background-color rgba(black, .5) !important
   opacity 1 !important
}


.modal-content{
   border 1px solid rgba(black, .4)
}

.modal-header{
   box-shadow 0 3px 1px rgba(black, .1)
   position relative
   z-index 1
   background #337ab7
   color white
   border-bottom-color darken(@background, 20%)

   .close{
      font-size 25px
      opacity .6


      &:hover{
         opacity .9
      }
   }
}

.modal-title{
   font-size 15px
}

.modal-body{

   &.mod-table{
      padding 0

      .panel{
         margin-bottom 0
         border 0
      }
   }
}

.modal-footer{
   text-align left
   box-shadow 0 -3px 1px rgba(black, .02)
   position relative
   background white

   &[style]{
      box-shadow 0 -3px 10px rgba(black, .1)
   }
}

.modal-dialog {
   width 1550px !important

   @media (max-width 1600px) {
      width 1350px !important
   }

   @media (max-width 1400px) {
      width 1150px !important
   }

   @media (max-width 1200px) {
      width 950px !important
   }

   @media (max-width 1000px) {
      width 800px !important
   }
}

sel = '.arcticmodal-container'
for num in (2..10) {
   sel = sel + ' + .arcticmodal-overlay + .arcticmodal-container'

   {sel}{
      .modal-dialog{
         padding 0 ((num - 1) * 15)px
         margin-top ((num) * 40 - 10)px
      }
   }
}